<div class="d-flex row mt-4">

  <div class="col new-collection-form">
    {{#unless collections}}
    <h3>Create a New Collection:</h3>

    <form class="form">
      <div class="form-group">
        <label for="col-name">Collection name:</label>
        <input class="form-input" type="text" id="col-name" name="col-name" />
      </div>
      <div class="form-group">
        <label for="col-desc">Description:</label>
        <input class="form-input" type="text" id="col-desc" name="col-desc"></input>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success">Create</button>
      </div>
    </form>
    {{else}}
  </div>

  <div class="container col-12 collection-list">
    <h3>Current Collection:</h3>

    {{#each collections as |collection|}}
    <div class="row mb-2">
      <div class="col">
        <h4 id="colview"><a id="coltext" href="/collection/{{collection.id}}">{{collection.col_name}}</a></h4>
        <p>{{collection.col_description}}</p>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger" data-id="{{collection.id}}">DELETE</button>
      </div>
    </div>
    <div class="row">
      <div class="col-6 justify-content-center">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Item Name</th>
              <th scope="col">Description</th>
              <th scope="col">Picture</th>
              <th scope="col">Delete Item</th>
            </tr>
          </thead>
          <tbody class="item-list">
            {{#each items as |item|}}
            <tr>
              <td>{{item.item_name}}</td>
              <td>{{item.item_description}}.</td>
              <td><img src="{{split_url item.item_image}}" class="img-thumbnail" alt="{{item.item_name}}" /></td>
              {{! <button>Edit</button> }}
              <td><button class="btn btn-sm btn-danger" item-data-id="{{item.id}}">DELETE</button></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="col-6 align-items-right new-item-form">
        <h3>Create a New Item:</h3>

        <form class="form container">
          <div class="form-group">
            <label for="item-name">Item name:</label>
            <input class="form-input" type="text" id="item-name" name="item-name" />
          </div>
          <div class="form-group">
            <label for="item-desc">Description:</label>
            <input class="form-input" type="text" id="item-desc" name="item-desc"></input>
          </div>
          <div class="row">
            <div class="col-5"></div>
            <div class="col-4"> <button class="wiget"></button> </div>
            <div class="col-4"></div>
          </div>
          <input type="hidden" id="col-id" value="{{collection.id}}" />
          <div class="form-group">
            <button type="submit" class="btn btn-success">Add Item</button>
          </div>
        </form>
      </div>
    </div>
    {{/each}}
  </div>

  {{/unless}}
</div>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="./js/profile.js"></script>