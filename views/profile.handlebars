<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Collection:</h3>

    <form class="form new-collection-form">
      <div class="form-group">
        <label for="col-name">Collection name:</label>
        <input class="form-input" type="text" id="col-name" name="col-name" />
      </div>
      <div class="form-group">
        <label for="col-desc">description:</label>
        <textarea class="form-input" id="col-desc" name="col-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{!-- {{#if collection.length}} --}}
  <div class="col-md-6 collection-list">
    <h3>Current Collections:</h3>


    {{#each collections as |collection|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/collection/{{collection.id}}">{{collection.col_name}}</a></h4>
        <p>{{collection.col_description}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{collection.id}}">DELETE</button>
      </div>
    </div>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Item Name</th>
            <th scope="col">Description</th>
            <th scope="col">Picture</th>
            <th scope="col">Delete Item</th>
          </tr>
        </thead>
        <tbody class="item-list">
          {{#each items as |item|}}
          <tr>
            <td>{{item.item_name}}</td>
            <td>{{item.item_description}}.</td>
            <td><img src="{{item.item_image}}" class="img-thumbnail" alt="{{item.item_name}}" /></td>
            {{! <button>Edit</button> }}
            <td><button class="btn btn-sm btn-danger" data-id="{{item.id}}">DELETE</button></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-6">
    <h3>Create a New Item:</h3>

    <form class="form new-item-form">
      <div class="form-group">
        <label for="item-name">Item name:</label>
        <input class="form-input" type="text" id="item-name" name="item-name" />
      </div>
      <div class="form-group">
        <label for="item-desc">description:</label>
        <textarea class="form-input" id="item-desc" name="item-desc"></textarea>
      </div>
      <div id="wiget"></div>
      <input type="hidden" id="col-id" value="{{collection.id}}" />
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Item</button>
      </div>
    </form>
  </div>
  {{/each}}
</div>

{{!-- {{/if}} --}}
</div>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="./js/profile.js"></script>